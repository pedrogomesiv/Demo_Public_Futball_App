<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:fontFamily">@font/retro</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:headerBackground">@style/myActionBar</item>
        <item name="android:dividerHeight">20sp</item>
        <item name="android:divider">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/ic_image2vector</item>
        <!--<item name="android:windowBackground">@android:color/background_light</item>-->
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">#F00</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HighContrastTheme" parent="Theme.AppCompat.NoActionBar">
        <!--<item name="android:windowBackground">@android:color/black</item>-->
        <item name="android:windowBackground">@drawable/ic_image2vectorhighcontrasr</item>
        <item name="android:textColor">@color/HighContrastTextColor</item>
        <item name="colorAccent">@color/HighContrastTextColor</item>
        <item name="colorPrimary">#000</item>
        <item name="android:textColorSecondary">@color/HighContrastTextColor</item>
        <item name="android:textColorSecondaryInverse">@color/HighContrastTextColor</item>
        <item name="android:headerBackground">@style/myActionBarHighContrast</item>
        <item name="android:checkboxStyle">@style/myCheckBox</item>
        <item name="android:divider">#000</item>
        <item name="android:dividerHeight">20sp</item>
        <item name="android:textColorPrimary">@color/HighContrastTextColor</item>
        <item name="android:title">#000</item>
    </style>

    <style name="myActionBarHighContrast" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">#000</item>
    </style>
    <style name="myActionBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="myCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/HighContrastTextColor</item>
    </style>

    <style name="smallText" >
        <item name="android:textSize">14sp</item>
    </style>
    <style name="mediumText">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="largeText">
        <item name="android:textSize">22sp</item>
    </style>



</resources>
